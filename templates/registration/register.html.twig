{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-auto">
                <div class="card bg-light mb-3 mt-5" style="width: 400px">
                    <div class="card-body">
                        <div class="card-header mb-3">Registration Form</div>
                        <form class="signUp" action="#" method="POST">
                            <div class="form-group">
                                <div class="col-md-12 mb-3">
                                    <input type="email" class="form-control email" name="email" id="email"
                                           placeholder="Email" required autocomplete="off" value="">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 mb-3">
                                    <input type="password" class="form-control password" name="password" id="password"
                                           placeholder="Password" required autocomplete="off" value="">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 mb-3">
                                    <input type="password" class="form-control passwordConfirm" name="confirmPassword"
                                           id="passwordConfirm" placeholder="Confirm Password" required
                                           autocomplete="off" value="">
                                </div>
                            </div>

                            <div class="checkBox">
                                <div class="col-md-12 mb-3">
                                    <input type="checkbox" class="checkbox" name="checkbox" id="checkbox">
                                    <span class="text">I agree with term & conditions</span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12">
                                    <button type="button" class="btn btn-primary" id="submitButton">Register</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $("#submitButton").click(function () {
                var email = $(".email").val();
                var password = $(".password").val();
                var data = {
                    'email': email,
                    'password': password
                };

                $.ajax({
                    url: "{{ path('user_register') }}",
                    type: "POST",
                    data: data,
                    cache: false,
                    success: function () {
                    }
                })
            })
        });
    </script>
{% endblock %}
