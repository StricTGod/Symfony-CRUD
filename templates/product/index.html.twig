{% extends 'base.html.twig' %}

{% block title %} Products {% endblock %}

{% block body %}
    <div class="example-wrapper">
        <div class="d-grid gap-2 d-md-block">
            <a class="btn btn-success" href="{{ path('open_create_modal') }}" role="button">Create product</a>
            <a class="btn btn-success" href="{{ path('open_create_category') }}" role="button">Create category</a>
            <a class="btn btn-success" href="/products?sortDir=ASC" role="button">ASC</a>
            <a class="btn btn-success" href="/products?sortDir=DESC" role="button">DESC</a>
        </div>
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
            </tr>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.category.name ?? ''}}</td>
                <td><a class="btn btn-primary" href="{{ path('open_update_modal', { id: product.id }) }}" role="button">Edit</a></td>
                <td><a class="btn btn-danger" href="{{ path('product_delete', { id: product.id }) }}" role="button">Delete</a></td>
            </tr>
        {% endfor %}
    </table>
    </div>
{% endblock %}